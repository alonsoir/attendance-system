# App Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-in-your-env-dev-file
VERSION=0.1.0

# API
API_V1_STR=/api/v1
PROJECT_NAME=Attendance System (Dev)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]

# Database - Configure these in your .env-dev file
POSTGRES_SERVER=localhost
POSTGRES_USER=change_me
POSTGRES_PASSWORD=change_me
POSTGRES_DB=attendance_dev
POSTGRES_PORT=5432
DATABASE_URI=${POSTGRES_URI:-postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}}

# Redis - Configure these in your .env-dev file
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me
REDIS_URL=${REDIS_URI:-redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0}

# External Services - Add your keys in .env-dev file
ANTHROPIC_API_KEY=your-anthropic-api-key-here
META_API_KEY=your-meta-api-key-here
WHATSAPP_CALLBACK_TOKEN=your-whatsapp-token-here

# Email - Configure these in your .env-dev file
SMTP_TLS=True
SMTP_HOST=change_me
SMTP_PORT=587
SMTP_USER=change_me
SMTP_PASSWORD=change_me
EMAILS_FROM_EMAIL=change_me
EMAILS_FROM_NAME="Attendance System Dev"

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=change_me_if_using_sentry
LOG_LEVEL=DEBUG

# Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend Settings
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/api/v1/ws

# Internationalization
DEFAULT_LANGUAGE=es-ES
SUPPORTED_LANGUAGES=["es-ES","en-US"]

# Cache
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Development Tools
DEBUGPY_ENABLED=true
DEBUGPY_PORT=5678